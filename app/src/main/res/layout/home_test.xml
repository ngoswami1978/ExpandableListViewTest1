<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:minWidth="25px"
        android:minHeight="25px">
        <TextView
            android:text="Pay "
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:background="@drawable/shape"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:fontFamily="@string/abc_action_bar_home_description_format"
            android:id="@+id/tvpayMain" />
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b30000"
        tools:context="me.vable.android.viewandlayoutlessons.FrameLayoutExampleActivity">

        <TextView
            android:text="JUL 2015"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/textviewleftborder"
            android:layout_gravity="right|bottom" />

        <TextView
            android:text="AUG 2015"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/textviewtopborder"
            android:layout_gravity="left|bottom" />

        <TextView
            android:text="OCT 2015"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/textviewleftborder"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:text="SEP 2015"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/textviewtopborder"
            android:layout_gravity="left|center_vertical"
            android:textIsSelectable="false" />


        <TextView
            android:text="NOV 2015"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/textviewleftborder"
            android:layout_gravity="right|center_horizontal"
            android:textIsSelectable="false" />

        <TextView
            android:text="DEC 2015"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/textviewrightborder"
            android:layout_gravity="left|center_horizontal"
            android:textIsSelectable="false"
            android:allowUndo="false"
            android:clickable="false" />

    </FrameLayout>
</LinearLayout>